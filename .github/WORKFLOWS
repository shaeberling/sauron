name: Sauron Java Tests

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v2
      - name: Set up JDK 1.9
        uses: actions/setup-java@v1
        with:
          java-version: 1.9
      - name: Run Gradle BUILD
        run: ./gradlew build
      - name: Rund Gradle TESTS
        run: ./gradlew test
